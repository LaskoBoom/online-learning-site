<div class="contact" id="contact">

    <div class="container">

        <div class="contact__layout">

            <div class="contact__title">

                <h1>Get In Touch</h1>
                
            </div>

            <div class="contact__description">

                <div class="contact__description-inner">

                    <p>Lorem ipsum dolor sit at, consectetur adipielit. 
                    Facilisi fermentum, dignissim pharetra. Aliquam 
                    Lorem ipsum dolor sit at, consectetur adipielit. 
                    Facilisi fermentum, dignissim pharetra. Aliquam </p>
                   
                </div>

            </div>

            <div class="contact__content">

                <div class="contact__form">

                    <input type="text" class="contact__form-name" id="name" name="name" placeholder="Name" required maxlength="40">
                    <input type="email" class="contact__form-email" id="email" name="email" placeholder="Email" required maxlength="60">
                    <input type="text" class="contact__form-subject" id="subject" name="subject" placeholder="Subject" required maxlength="70">
                    <textarea class="contact__form-message" id="message" name="message" placeholder="Message" required maxlength="200"></textarea>

                    <button type="submit" class="contact__form-button">Send</button>

                </div>

                <div class="contact__card">

                    {{> contact-card/contact-card }}

                </div>

            </div>

        </div>

    </div>

</div>