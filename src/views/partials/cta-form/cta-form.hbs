<div class="cta-form">

    <div class="cta-form__title">

        <h2>Registration for enrolment</h2>

    </div>

    <div class="cta-form__form">

        <input type="text" class="cta-form__form-name" id="name" name="name" placeholder="Name" required maxlength="40">
        <input type="email" class="cta-form__form-email" id="email" name="email" placeholder="Email" required maxlength="60">
        <input type="tel" class="cta-form__form-tel" id="tel" name="phone" placeholder="Phone Number" required maxlength="20">
        <select class="cta-form__form-select" id="course" name="course" required>
            <option value="" disabled selected>Select a course</option>
            <option value="game-design">Game Design</option>
            <option value="marketing-strategy">Marketing Strategy</option>
            <option value="data-analysis">Data Analysis</option>
            <option value="advanced-ux-designs">Advanced UX Designs</option>
        </select>

        <button type="submit" class="cta-form__button">Apply Now</button>

    </div>

</div>